<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

<ScrollView
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.fragment.student_notes">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/maintoolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/green"
                app:title="@string/notes"
                app:titleTextColor="@color/white">

                <ImageView
                    android:id="@+id/toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:padding="@dimen/_8ssp"
                    android:src="@drawable/menu" />
            </androidx.appcompat.widget.Toolbar>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.322">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardbackground"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:gravity="center_horizontal"
                                    android:text="@string/uploadnote"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/_25ssp"
                                    android:textStyle="bold" />

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ilBranch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    android:hint="@string/branch"
                                    app:prefixTextColor="@color/black"
                                    app:startIconDrawable="@drawable/branch">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etBranch"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_10ssp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ilsemester"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    android:hint="@string/semester"
                                    android:textColor="@color/black"
                                    app:prefixTextColor="@color/black"
                                    app:startIconDrawable="@drawable/semester">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etsemester"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_10ssp" />

                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ilsubject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    android:hint="@string/subject"
                                    android:textColor="@color/black"
                                    app:prefixTextColor="@color/black"
                                    app:startIconDrawable="@drawable/subject">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etsubject"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_10ssp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/ilUnit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    android:hint="@string/unit"
                                    android:textColor="@color/black"
                                    app:prefixTextColor="@color/black"
                                    app:startIconDrawable="@drawable/unit">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/etUnit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:focusable="false"
                                        android:textSize="@dimen/_10ssp" />
                                </com.google.android.material.textfield.TextInputLayout>


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/iltopic"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    android:hint="@string/topic"
                                    android:textColor="@color/black"
                                    app:prefixTextColor="@color/black"
                                    app:startIconDrawable="@drawable/topic">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/ettopic"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10ssp" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10ssp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/attachpdf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_15sdp"
                                        android:layout_marginTop="@dimen/_13sdp"
                                        android:text="@string/select_pdf" />

                                    <TextView
                                        android:id="@+id/pdferror"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/holo_red_light"
                                        android:textSize="@dimen/_5ssp"
                                        android:visibility="gone" />
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/file_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_6sdp" />

                            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
            android:id="@+id/uploadbtn"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="52dp"
            android:backgroundTint="@color/green"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="@string/upload"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/view_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="740dp"
            android:background="@color/skyblue"
            app:backgroundTint="@color/skyblue"
            app:borderWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/view"
            tools:ignore="ContentDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>

</ScrollView>
</layout>