<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="name"
            type="String" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@{name}"
            android:textColor="@color/black"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            app:endIconMode="clear_text"
            app:helperTextTextColor="@color/red"
            app:startIconDrawable="@drawable/person">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etname"
                android:textSize="@dimen/_10ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:hint="@string/email"
            android:textColor="@color/black"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/email">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:hint="@string/number"
            app:endIconMode="clear_text"
            app:prefixText="+91"
            app:prefixTextColor="@color/blue"
            app:startIconDrawable="@drawable/call">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etnumber"
                android:layout_width="match_parent"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/rollno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:hint="@string/rollno"
            android:textColor="@color/black"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/rollno">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etrollno"
                android:layout_width="match_parent"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:hint="@string/dob"
            app:startIconDrawable="@drawable/calender">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etdb"
                android:layout_width="match_parent"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:hint="@string/gender"
            app:startIconDrawable="@drawable/gender"
            android:layout_marginTop="@dimen/_11ssp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etgender"
                android:layout_width="match_parent"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:hint="@string/session"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/session">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etsession"
                android:layout_width="match_parent"
                android:inputType="number"
                android:textSize="@dimen/_10ssp"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/semester"
            android:layout_marginTop="@dimen/_9ssp"
            android:hint="@string/semester">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etsemester"
                android:layout_width="match_parent"
                android:textSize="@dimen/_11ssp"
                android:layout_height="wrap_content"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9ssp"
            android:hint="@string/branch"
            app:startIconDrawable="@drawable/branch">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etbranch"
                android:layout_width="match_parent"
                android:textSize="@dimen/_11ssp"
                android:layout_height="wrap_content"
                android:focusable="false"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
